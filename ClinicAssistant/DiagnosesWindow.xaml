<Window x:Class="ClinicAssistant.DiagnosesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Возможные диагнозы" Height="450" Width="450"
        Background="#F9F9F9" Icon="/28-280979_medical-logo-medical-cross-symbol-png (1).png">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Возможные диагнозы" FontWeight="Bold" FontSize="20" Foreground="#333333"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <ItemsControl x:Name="DiagnosesPanel" Margin="0,0,0,20"
                          BorderBrush="#B0B0B0" BorderThickness="1"
                          Background="White" Padding="10"/>

            <TextBlock Text="Наиболее вероятный врач:" FontWeight="Bold" FontSize="16"
                       Foreground="#333333" Margin="0,10,0,5"/>
            <TextBlock x:Name="DoctorInfoTextBlock" FontSize="14" Foreground="#555555"/>
        </StackPanel>

        <Button Content="Закрыть" Width="120" Height="40" Margin="0,10,0,0"
                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                FontSize="14" Click="CloseButton_Click"
                HorizontalAlignment="Center" Grid.Row="2"/>
    </Grid>
</Window>
