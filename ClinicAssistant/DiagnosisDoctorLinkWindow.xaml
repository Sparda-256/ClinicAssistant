<Window x:Class="ClinicAssistant.DiagnosisDoctorLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить связь диагноза к врачу" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Выберите диагноз:" />
            <ComboBox Name="DiagnosisComboBox" Width="300" />
            <Label Content="Выберите врача:" Margin="0,10,0,0" />
            <ComboBox Name="DoctorComboBox" Width="300" />
            <Button Content="Сохранить" Width="100" Margin="0,20,0,0"
                    HorizontalAlignment="Left" Click="SaveDiagnosisDoctorLink_Click" />
        </StackPanel>
    </Grid>
</Window>
